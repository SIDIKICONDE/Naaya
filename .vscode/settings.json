{
  // Configuration de la taille de police
  "editor.fontSize": 13,
  "terminal.integrated.fontSize": 13,
  "debug.console.fontSize": 13,
  
  
  // Configuration de l'espacement des lignes
  "editor.lineHeight": 1.5,
  "terminal.integrated.lineHeight": 1.2,
  
  // Configuration de l'indentation
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  
  // Configuration pour TypeScript/React Native
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  
  // Configuration pour React Native
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.ts": "typescript",
    "*.jsx": "javascriptreact",
    "*.js": "javascript"
  },
  
  // Configuration de l'explorateur de fichiers
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "*.podspec": "*.podspec, Podfile, Podfile.lock",
    "Podfile": "Podfile.lock",
    "*.gradle": "*.gradle, gradle.properties, gradle-wrapper.properties",
    "gradle.properties": "gradle-wrapper.properties",
    "*.plist": "*.plist, *.entitlements",
    "*.xcconfig": "*.xcconfig, *.xcworkspace",
    "*.xcworkspace": "*.xcworkspace, *.xcodeproj",
    "*.xcodeproj": "*.xcodeproj, *.xcworkspace"
  },
  
  // Configuration de l'auto-sauvegarde
  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 1000,
  
  // Configuration du formatage
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  
  // Configuration de l'exploration
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/ios/build": true,
    "**/android/build": true,
    "**/android/app/build": true,
    "**/ios/Pods": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/yarn.lock": true,
    "**/package-lock.json": true
  },
  
  // Configuration des fichiers à ignorer
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/ios/build": true,
    "**/android/build": true,
    "**/android/app/build": true,
    "**/ios/Pods": true
  },
  
  // Configuration de la minimap
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,
  
  // Configuration des guides de ligne
  "editor.rulers": [80, 120],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  
  // Configuration de la coloration syntaxique
  "editor.semanticHighlighting.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  
  // Configuration des suggestions
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  
  // Configuration de l'auto-complétion
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "on",
  
  // Configuration des paramètres spécifiques au projet Naaya
  "emmet.includeLanguages": {
    "typescript": "html",
    "typescriptreact": "html"
  },
  
  // Configuration pour le débogage React Native
  "react-native-tools.showUserTips": false,
  "react-native-tools.projectRoot": "./",
  
  // Configuration des extensions recommandées
  "extensions.ignoreRecommendations": false
}
