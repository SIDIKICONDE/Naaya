{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2019", "DOM"],
    "jsx": "react-native",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["react", "jest"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": ".",
    "paths": {
      "@Audio/*": ["src/audio/*"],
      "@audio/*": ["src/audio/*"],
      "@ui/*": ["src/ui/*"],
      "@screens/*": ["src/screens/*"],
      "@components/*": ["src/camera/components/*"],
      "system@components/*": ["src/camera/components/*"]
    }
  },
  "include": [
    "App.tsx",
    "src/**/*",
    "specs/**/*"
  ]
}
