# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

# Expo supprimé: pas d'autolinking Expo

platform :ios, 16.0

prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'Naaya' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Expo supprimé: ne pas activer l'autolinking Expo

  post_install do |installer|
    # === Configuration FFmpeg Homebrew ===
    # Configurer tous les projets (app principale et pods)
    [installer.pods_project, installer.aggregate_targets.first&.user_project].compact.each do |project|
      project.targets.each do |target|
        # Appliquer la config FFmpeg au target principal Naaya
        if target.name == 'Naaya' || target.name.include?('Naaya')
          target.build_configurations.each do |config|
            # Chemins FFmpeg Homebrew
            config.build_settings['HEADER_SEARCH_PATHS'] ||= []
            config.build_settings['HEADER_SEARCH_PATHS'] << '/opt/homebrew/include'
            config.build_settings['LIBRARY_SEARCH_PATHS'] ||= []
            config.build_settings['LIBRARY_SEARCH_PATHS'] << '/opt/homebrew/lib'
            
            # Lier les bibliothèques FFmpeg
            config.build_settings['OTHER_LDFLAGS'] ||= []
            config.build_settings['OTHER_LDFLAGS'] << '-lavcodec'
            config.build_settings['OTHER_LDFLAGS'] << '-lavfilter'
            config.build_settings['OTHER_LDFLAGS'] << '-lavformat'
            config.build_settings['OTHER_LDFLAGS'] << '-lavutil'
            config.build_settings['OTHER_LDFLAGS'] << '-lswscale'
            config.build_settings['OTHER_LDFLAGS'] << '-lswresample'
            
            # Définir FFMPEG_AVAILABLE
            config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= []
            config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'FFMPEG_AVAILABLE=1'
          end
        end
      end
    end
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # Forcer la génération de module maps pour certains pods consommés par Swift
    installer.pods_project.targets.each do |target|
      if target.name == 'VisionCamera' || target.name.start_with?('react-native-video')
        target.build_configurations.each do |config|
          config.build_settings['DEFINES_MODULE'] = 'YES'
          config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        end
      end
    end
  end
end
